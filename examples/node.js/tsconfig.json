{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./*.ts", "src"],
  "compilerOptions": {
    // Environment
    "target": "esnext",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,

    // Type Checking
    "skipLibCheck": true,
    "strict": true,

    // Output
    "noEmit": true
  }
}
