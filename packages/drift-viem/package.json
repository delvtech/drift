{
  "name": "@delvtech/drift-viem",
  "version": "0.0.1-beta.0",
  "license": "AGPL-3.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./testing": {
      "types": "./dist/testing.d.ts",
      "default": "./dist/testing.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "testing": [
        "./dist/testing.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup",
    "test:watch": "vitest --reporter=verbose",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "watch": "tsup --watch"
  },
  "peerDependencies": {
    "sinon": "^17.0.3",
    "viem": "^2"
  },
  "peerDependenciesMeta": {
    "sinon": {
      "optional": true
    }
  },
  "dependencies": {
    "@delvtech/drift": "0.0.1-beta.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/sinon": "^17.0.3",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "viem": "^2.21.19",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
