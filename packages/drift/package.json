{
  "name": "@gud/drift",
  "description": "Effortless ethereum development across Web3 libraries",
  "version": "2.0.0-next.6",
  "license": "Apache-2.0",
  "author": "Ryan Goree (https://github.com/ryangoree)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryangoree/drift.git"
  },
  "homepage": "https://ryangoree.github.io/drift",
  "bugs": "https://github.com/ryangoree/drift/issues",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./testing": {
      "import": {
        "types": "./dist/testing.d.ts",
        "default": "./dist/testing.js"
      },
      "require": {
        "types": "./dist/testing.d.cts",
        "default": "./dist/testing.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "generate:artifacts": "sh scripts/generateArtifacts.sh",
    "generate:ethereum": "tsx scripts/generateEthereum.ts",
    "generate:multicall-addresses": "tsx scripts/generateMulticallAddresses.ts",
    "build": "tsup",
    "watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest --reporter=verbose",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit --p tsconfig.typecheck.json",
    "typecheck:watch": "tsc --noEmit --p tsconfig.typecheck.json --watch"
  },
  "peerDependencies": {
    "sinon": "^21.0.0",
    "@types/sinon": "^17.0.4"
  },
  "peerDependenciesMeta": {
    "sinon": {
      "optional": true
    },
    "@types/sinon": {
      "optional": true
    }
  },
  "dependencies": {
    "lodash.ismatch": "^4.4.0",
    "lru-cache": "^11.2.1",
    "ox": "^0.9.6",
    "safe-stable-stringify": "^2.5.0"
  },
  "devDependencies": {
    "@open-rpc/typings": "^1.12.4",
    "@types/lodash.ismatch": "^4.4.9",
    "@types/node": "^24.5.1",
    "@types/sinon": "^17.0.4",
    "@vitest/coverage-v8": "3.2.4",
    "abitype": "^1.1.0",
    "sinon": "^21.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "testing": [
        "./dist/testing.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
