{
  "name": "@delvtech/drift",
  "description": "Effortless ethereum development across Web3 libraries",
  "version": "0.3.0",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "default": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      }
    },
    "./testing": {
      "types": {
        "import": "./dist/testing.d.ts",
        "require": "./dist/testing.d.cts"
      },
      "default": {
        "import": "./dist/testing.js",
        "require": "./dist/testing.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "testing": [
        "./dist/testing.d.ts"
      ]
    }
  },
  "scripts": {
    "build:artifacts": "sh scripts/buildArtifacts.sh",
    "build:ethereum": "sh scripts/buildEthereum.sh",
    "build": "tsup",
    "watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest --reporter=verbose",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit --p tsconfig.typecheck.json"
  },
  "peerDependencies": {
    "sinon": "^17.0.1"
  },
  "peerDependenciesMeta": {
    "sinon": {
      "optional": true
    }
  },
  "dependencies": {
    "lodash.ismatch": "^4.4.0",
    "lru-cache": "^11.0.2",
    "ox": "^0.6.9",
    "safe-stable-stringify": "^2.5.0"
  },
  "devDependencies": {
    "@open-rpc/typings": "^1.12.4",
    "@repo/typescript-config": "*",
    "@types/lodash.ismatch": "^4.4.9",
    "@types/sinon": "^17.0.3",
    "@vitest/coverage-v8": "3.0.4",
    "abitype": "^1.0.8",
    "fast-json-stable-stringify": "^2.1.0",
    "sinon": "^17.0.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.4"
  },
  "author": {
    "name": "DELV",
    "email": "contact@delv.tech",
    "url": "https://github.com/delvtech"
  },
  "repository": "https://github.com/delvtech/drift",
  "bugs": "https://github.com/delvtech/drift/issues",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
