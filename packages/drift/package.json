{
  "name": "@delvtech/drift",
  "description": "Effortless ethereum development across Web3 libraries",
  "version": "0.0.1-beta.24",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "default": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      }
    },
    "./testing": {
      "types": {
        "import": "./dist/testing.d.ts",
        "require": "./dist/testing.d.cts"
      },
      "default": {
        "import": "./dist/testing.js",
        "require": "./dist/testing.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "testing": [
        "./dist/testing.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest --reporter=verbose",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "sinon": "^17.0.1"
  },
  "peerDependenciesMeta": {
    "sinon": {
      "optional": true
    }
  },
  "dependencies": {
    "lodash.ismatch": "^4.4.0",
    "lru-cache": "^10.0.1",
    "ox": "^0.1.2",
    "safe-stable-stringify": "^2.5.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/lodash.ismatch": "^4.4.9",
    "@types/sinon": "^17.0.3",
    "abitype": "^1.0.6",
    "fast-json-stable-stringify": "^2.1.0",
    "sinon": "^17.0.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.1.6"
  },
  "author": {
    "name": "DELV",
    "email": "contact@delv.tech",
    "url": "https://github.com/delvtech"
  },
  "repository": "https://github.com/delvtech/drift",
  "bugs": "https://github.com/delvtech/drift/issues",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
