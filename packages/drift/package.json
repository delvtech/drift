{
  "name": "@delvtech/drift",
  "description": "Effortless ethereum development across Web3 libraries",
  "version": "0.9.0",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.cjs",
  "sideEffects": false,
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "default": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      }
    },
    "./testing": {
      "types": {
        "import": "./dist/testing.d.ts",
        "require": "./dist/testing.d.cts"
      },
      "default": {
        "import": "./dist/testing.js",
        "require": "./dist/testing.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "testing": [
        "./dist/testing.d.ts"
      ]
    }
  },
  "scripts": {
    "generate:artifacts": "sh scripts/generateArtifacts.sh",
    "generate:ethereum": "tsx scripts/generateEthereum.ts",
    "build": "tsup",
    "watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest --reporter=verbose",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit --p tsconfig.typecheck.json",
    "typecheck:watch": "tsc --noEmit --p tsconfig.typecheck.json --watch"
  },
  "peerDependencies": {
    "sinon": "^20.0.0"
  },
  "peerDependenciesMeta": {
    "sinon": {
      "optional": true
    }
  },
  "dependencies": {
    "lodash.ismatch": "^4.4.0",
    "lru-cache": "^11.1.0",
    "ox": "^0.7.0",
    "safe-stable-stringify": "^2.5.0"
  },
  "devDependencies": {
    "@open-rpc/typings": "^1.12.4",
    "@types/lodash.ismatch": "^4.4.9",
    "@types/node": "^22.14.0",
    "@types/sinon": "^17.0.4",
    "@vitest/coverage-v8": "3.1.1",
    "abitype": "^1.0.8",
    "fast-json-stable-stringify": "^2.1.0",
    "sinon": "^20.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "author": {
    "name": "DELV",
    "email": "contact@delv.tech",
    "url": "https://github.com/delvtech"
  },
  "repository": "https://github.com/delvtech/drift",
  "bugs": "https://github.com/delvtech/drift/issues",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
