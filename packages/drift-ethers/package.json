{
  "name": "@delvtech/drift-ethers",
  "description": "Ethers.js adapter for Drift",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "default": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "test:watch": "vitest --reporter=verbose",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "watch": "tsup --watch"
  },
  "peerDependencies": {
    "@delvtech/drift": "0.2.0",
    "ethers": "^6.13.5"
  },
  "devDependencies": {
    "@delvtech/drift": "0.2.0",
    "@repo/typescript-config": "*",
    "ethers": "^6.13.5",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.4"
  },
  "author": {
    "name": "DELV",
    "email": "contact@delv.tech",
    "url": "https://github.com/delvtech"
  },
  "repository": "https://github.com/delvtech/drift",
  "bugs": "https://github.com/delvtech/drift/issues",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
